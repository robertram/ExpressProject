                      <input type="text" class="form-control" id="campoDescripcion" required>
                    </div>
                    <div class="col-md-4 mb-3">
                      <label for="campoNombreCorto">Nombre Corto</label>
                      <div class="input-group">
                        <input type="text" class="form-control" id="campoNombreCorto" aria-describedby="inputGroupPrepend" required>
                      </div>
                    </div>
                  </div>
                  <div class="form-row">
                    <div class="col-md-4 mb-3">
                      <label for="campoMarca">Marca</label>
                      <input type="text" class="form-control" id="campoMarca" required>
                    </div>
                    <div class="col-md-4 mb-3">
                      <label for="campoAno">Año</label>
                      <input type="text" class="form-control" id="campoAno" required>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="campoPlaca">Placa</label>
                        <input type="text" class="form-control" id="campoPlaca" required>
                      </div>
                  </div>
                  <div>
                  <button class="btn btn-primary" type="submit">Agregar</button>
                </div>
                <div style="margin-top: 5%;">
                <div class="form-row">
                <div class="col-md-4 mb-3">
                    <label for="campoCodigo">Código Camión</label>
                    <input type="text" class="form-control" id="campoCodigo" required>
                  </div>
                  <div class="col-md-4 mb-3">
                    <label for="campoNombreCorto">Nombre Corto</label>
                    <input type="text" class="form-control" id="campoNombreCorto" required>
                  </div>
                  <div class="col-md-4 mb-3">
                    <button class="btn btn-info" type="submit"  style="margin-top: 10%;">Aceptar</button>
                  <button class="btn btn-warning" type="submit"  style="margin-top: 10%;">Modificar</button>
                <button class="btn btn-danger" type="submit"  style="margin-top: 10%;">Eliminar</button>
            </div>
                </div>
                </div>
                
                <table class="table" style="margin-top: 5%;">
                    <thead class="thead-light">
                      <tr>
                        <th scope="col">Código Camión</th>
