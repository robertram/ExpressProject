<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include ('partials/headNuevo') %>
    </head>
  <body>
    <%- include ('partials/navegacionNuevo') %>
      <div class="containerInfo">
        <main>
          <div class="container" style="margin-top: 8%;">
            <div class="row">
              <div class="col"></div>
              <div class="col-10">
                <h2 class="text">Productos</h2>
                <h4>Maestro</h4>
                <form class="needs-validation" novalidate>
                  <div class="form-row" style="margin-top: 5%;">
                    <div class="col-md-4 mb-3">
                      <label for="campoCodigoMaestro">Código Producto</label>
                      <input type="text" class="form-control" id="campoCodigoMaestro" required>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="descripcion">Descripción</label>
                        <input type="text" class="form-control" id="descripcion" required>
                      </div>
                      <div class="col-md-4 mb-3">
                        <label for="puntoReOrden">Punto de Re Orden</label>
                        <input type="text" class="form-control" id="puntoReOrden" required>
                      </div>
                    <div class="col-md-4 mb-3">
                        <div class="dropdown" style="margin-top: 10%;">
                            <button class="btn btn-light dropdown-toggle" style="background-color: #E5D2E5;" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              Unidad de Medida
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                              <a class="dropdown-item" href="#" id="metros">metros</a>
                              <a class="dropdown-item" href="#" id="metrosCubicos">metros cúbicos</a>
                              <a class="dropdown-item" href="#" id="metrosCuadrados">metros cuadrados</a>
                              <a class="dropdown-item" href="#" id="litros">litros</a>
                            </div>
                        </div>
                    </div>
                  </div>
                  <br>
                  <h4>Detalles</h4>
                  <div class="form-row">
                    <div class="col-md-4 mb-3">
                        <label for="campoCodigoDetalle">Código Producto</label>
                        <input type="text" class="form-control" id="campoCodigoDetalle" required>
                      </div>
                      <div class="col-md-4 mb-3">
                        <label for="campoNombreCorto">Código Materia Prima</label>
                        <input type="text" class="form-control" id="campoNombreCorto" required>
                      </div>
                  </div>
                  <div style="margin-top: 5%;">
                  <button class="btn btn-primary" type="submit">Agregar</button>
                </div>
                <div style="margin-top: 5%;">
                <div class="form-row">
                <div class="col-md-4 mb-3">
                    <label for="campoCodigo">Código Producto</label>
                    <input type="text" class="form-control" id="campoCodigo" required>
                  </div>
                  <div class="col-md-4 mb-3">
                    <label for="campoNombreCorto">Nombre Corto</label>
                    <input type="text" class="form-control" id="campoNombreCorto" required>
                  </div>
                  <div class="col-md-4 mb-3">
                    <button class="btn btn-info" type="submit"  style="margin-top: 10%;">Aceptar</button>
                  <button class="btn btn-warning" type="submit"  style="margin-top: 10%;">Modificar</button>
                <button class="btn btn-danger" type="submit"  style="margin-top: 10%;">Eliminar</button>
            </div>
                </div>
                </div>
                
                <table class="table" style="margin-top: 5%;">
                    <thead class="thead-light">
                      <tr>
                        <th scope="col">Código Producto Maestro</th>
                        <th scope="col">Descripción</th>
                        <th scope="col">Punto de Re Orden</th>
                        <th scope="col">Unidad de Medida</th>
                        <th scope="col">Descripción</th>
                        <th scope="col">Código Producto Detalle</th>
                        <th scope="col">Código Materia Prima</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <th></th>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                      </tr>
                    </tbody>
                  </table>

                </form>
                
              </div>
              <div class="col">
              </div>
            </div>
          </div>
        </main>
      </div>
    </div>
    <%- include ('partials/script') %>
  </body>
</html>

